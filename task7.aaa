resource "null_resource" "create_folder" {
  provisioner "local-exec" {
    command = "mkdir -p ./wp-k8s/" # Creates the folder if it doesn't exist
  }
}

resource "null_resource" "copy_files_from_gcs" {
  provisioner "local-exec" {
    command = <<EOF
      gcloud storage cp -r gs://cloud-training/gsp321/wp-k8s/* ./wp-k8s/
      echo "Files copied from gs://cloud-training/gsp321/wp-k8s/ to Cloud Shell."
    EOF
  }
}

